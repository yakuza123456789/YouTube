<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPaddingTop="8dp"
    app:contentPaddingBottom="8dp"
    app:contentPaddingLeft="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgPlaylist"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:src="@drawable/profile"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:layout_toEndOf="@id/imgPlaylist">

            <TextView
                android:id="@+id/tvDescPL"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorDesc"
                android:textSize="16sp"
                android:text="@string/descriptionsPlaylist"/>

            <TextView
                android:id="@+id/tvSizeVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sizeVideo"/>

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>